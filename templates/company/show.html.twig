{% extends 'base.html.twig' %}

{% block title %}company
{% endblock %}

{% block body %}
    <div class="flex justify-center items-center h-screen">

	<div class="flex justify-center">
		<div class="w-full lg:w-3/4">
			<table class="table-auto bg-white p-6 rounded-lg shadow-md">
				<thead>
					<tr>
						<th class="px-4 py-2">Nom</th>

						<th class="px-4 py-2">Description</th>
						<th class="px-4 py-2">Date</th>
						<th class="px-4 py-2">membres</th>
						<th class="px-4 py-2">Website</th>
					</tr>
					<tr></tr>
				</thead>
				<tbody>
					<td  colspan="2" class="px-4 py-2">{{ company.name }}</td>
					<td class="px-4 py-2">{{ company.description }}</td>
					<td class="px-4 py-2">{{ company.date }}</td>
					<td class="px-4 py-2">{{ company.members }}</td>
