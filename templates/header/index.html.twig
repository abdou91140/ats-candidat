<div class="h-0 w-full h-full flex flex-col justify-between text-white">
	<a href="{{path('app_home')}}">ATS</a>
	<header class="h-16 w-full flex items-center relative justify-end px-5 space-x-10">

		<div class="flex flex-shrink-0 items-center space-x-4">

			{% if app.user %}
				<div class="flex flex-row justify-between space-x-10 items-end">
					<div class="text-md font-medium">Wazaaaa
						{{ app.user.firstname }}
						!</div>
					<a href="{{ path('app_logout') }}">
						<div class="rounded-full cursor-pointer bg-grey">
							<svg xmlns="http://www.w3.org/2000/svg" viewbox="0 0 24 24" fill="currentColor" class="w-6 h-6">
								<path fill-rule="evenodd" d="M11.47 2.47a.75.75 0 0 1 1.06 0l4.5 4.5a.75.75 0 0 1-1.06 1.06l-3.22-3.22V16.5a.75.75 0 0 1-1.5 0V4.81L8.03 8.03a.75.75 0 0 1-1.06-1.06l4.5-4.5ZM3 15.75a.75.75 0 0 1 .75.75v2.25a1.5 1.5 0 0 0 1.5 1.5h13.5a1.5 1.5 0 0 0 1.5-1.5V16.5a.75.75 0 0 1 1.5 0v2.25a3 3 0 0 1-3 3H5.25a3 3 0 0 1-3-3V16.5a.75.75 0 0 1 .75-.75Z" clip-rule="evenodd"/>
							</svg>
						</div>
					</a>
				{% else %}
					<div class="flex flex-col items-end">
						<a href="{{ path('app_login') }}">
							<button class="rounded">Connexion</button>
						</a>
					</div>
					<div class="flex flex-col items-end">
						<a href="{{ path('app_register') }}">
							<button class="rounded">Inscritption</button>
						</a>
					</div>
				{% endif %}
			</div>
		</header>
	</div>
